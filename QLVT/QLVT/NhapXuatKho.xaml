<Window x:Class="QLVT.NhapXuatKho"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLVT"
        mc:Ignorable="d"
        
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"        
        xmlns:uc="clr-namespace:QLVT.UserControlQLVT"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        
        Name="PhieuNhapXuat"
        Title="PHIẾU NHẬP XUẤT VẬT TƯ" Height="600" Width="900" Loaded="PhieuNhapXuat_Loaded">
    <Window.Resources>
        <local:QLVTDataSet1 x:Key="qLVTDataSet1"/>
        <CollectionViewSource x:Key="nHANVIENViewSource" Source="{Binding NHANVIEN, Source={StaticResource qLVTDataSet1}}"/>
        <CollectionViewSource x:Key="vATTUViewSource" Source="{Binding VATTU, Source={StaticResource qLVTDataSet1}}"/>
        <CollectionViewSource x:Key="kHOViewSource" Source="{Binding KHO, Source={StaticResource qLVTDataSet1}}"/>
        <CollectionViewSource x:Key="pHATSINHViewSource" Source="{Binding PHATSINH, Source={StaticResource qLVTDataSet1}}"/>
    </Window.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedNhapXuatVatTuCommand}" CommandParameter="{Binding ElementName=PhieuNhapXuat}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <uc:ControlBarUC Tag="{Binding Title, ElementName=PhieuNhapXuat}"></uc:ControlBarUC>
        </Grid>
        <Grid Grid.Row="1" Loaded="NXVT_Loaded">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="10,0,-0.2,2.4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <TextBlock Margin="15 5 15 5" FontWeight="ExtraBold" HorizontalAlignment="Center" Foreground="Purple"  FontFamily="Tahoma" Text="PHIẾU NHẬP/XUẤT VẬT TƯ"  FontSize="30" VerticalAlignment="Center" ></TextBlock>
                </Grid>
                <Grid Grid.Column="1">
                    <ComboBox x:Name="comboBoxCN" HorizontalAlignment="Left" VerticalAlignment="Center" Width="180" Height="38" SelectionChanged="comboBoxCN_SelectionChanged" />
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <materialDesign:Card Margin="15,14.6,14.8,0">
                    <WrapPanel Grid.Column="0"  Orientation="Horizontal" Margin="0 0 0 20" DataContext="{StaticResource pHATSINHViewSource}">
                        <TextBox x:Name="BoxPHIEU" Text="{Binding PHIEU, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" materialDesign:HintAssist.Hint="MÃ PHIẾU" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="80" Margin="15 5 15 5" KeyUp="SearchPHIEU" ></TextBox>
                        <ComboBox x:Name="comboBoxMANV" ToolTip="Chọn nhân viên nhập vật tư" materialDesign:HintAssist.Hint="Mã Nhân Viên" ItemsSource="{Binding Source={StaticResource nHANVIENViewSource}}" SelectedItem="{Binding SelectedNhanVien}" Width="120" Margin="15 5 15 5" Style="{StaticResource MaterialDesignFloatingHintComboBox}" DisplayMemberPath="MANV"></ComboBox>
                        <TextBox x:Name="BoxHOTENKH" Text="{Binding HOTENKH, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Họ Tên Khách Hàng" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="140" Margin="15 5 15 5" ></TextBox>
                        <ComboBox x:Name="comboBoxPHIEU" ToolTip="Chọn loại phiếu" materialDesign:HintAssist.Hint="Loại Phiếu" ItemsSource="{Binding}" SelectedItem="{Binding SelectedLoaiPhieu}" Width="80" Margin="15 5 15 5" Style="{StaticResource MaterialDesignFloatingHintComboBox}"></ComboBox>
                        <DatePicker  x:Name="NGAYNHAP" Width="120" SelectedDateFormat="Short" SelectedDate="{Binding NGAY, UpdateSourceTrigger=PropertyChanged}"  materialDesign:HintAssist.Hint="Ngày Nhập" Style="{StaticResource MaterialDesignFloatingHintDatePicker}"  Margin="15 5 15 5" />
                        <TextBox  x:Name="TONGTIEN" IsReadOnly="True" Text="{Binding THANHTIEN, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Tổng Tiền" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="150" Margin="15 5 15 5" ></TextBox>
                    </WrapPanel>
                </materialDesign:Card>
            </Grid>
            <Grid Grid.Row="2">
                <materialDesign:Card Margin="15,14.6,14.8,0" >
                    <WrapPanel Orientation="Horizontal"  Margin="0 0 0 20">
                        <ComboBox x:Name="comboBoxMAVT" ToolTip="Chọn tên vật tư" materialDesign:HintAssist.Hint="Tên Vật Tư" ItemsSource="{Binding Source={StaticResource vATTUViewSource}}" SelectedItem="{Binding SelectedVatTu}" Width="250" Margin="15 5 15 5" Style="{StaticResource MaterialDesignFloatingHintComboBox}" DisplayMemberPath="TENVT"></ComboBox>
                        <TextBox  x:Name="BoxSOLUONG" Text="{Binding SOLUONG, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Số Lượng" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="100" Margin="15 5 15 5" ></TextBox>
                        <TextBox x:Name="BoxDONGIA" Text="{Binding DONGIA, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Đơn Giá" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="150" Margin="15 5 15 5" ></TextBox>
                        <ComboBox x:Name="comboBoxMAKHO" ToolTip="Chọn kho nhập/xuất" materialDesign:HintAssist.Hint="Kho" ItemsSource="{Binding Source={StaticResource kHOViewSource}}" SelectedItem="{Binding SelectedKho}"  Width="100" Margin="15 5 15 5" Style="{StaticResource MaterialDesignFloatingHintComboBox}" DisplayMemberPath="TENKHO"></ComboBox>
                    </WrapPanel>
                </materialDesign:Card>
            </Grid>
            <Grid Grid.Row="3">
                <materialDesign:Card Margin="15,14.6,14.8,0"  >
                    <StackPanel Orientation="Horizontal">
                        <StackPanel.Resources>
                            <Style TargetType="Button">
                                <Setter Property="FontSize" Value="15"></Setter>
                                <Setter Property="FontWeight" Value="Bold"></Setter>
                                <Setter Property="Height" Value="40"></Setter>
                                <Setter Property="Width" Value="110"></Setter>
                                <Setter Property="Margin" Value="15"></Setter>
                            </Style>
                        </StackPanel.Resources>
                        <Button Command="{Binding AddCommand}" Background="#FF8A00" Content="Thêm" Click="ButtonAdd_Click"  ></Button>
                        <Button Command="{Binding DeleteCommand}"  Background="#FF1A1A" Content="Xoá" Click="ButtonDelete_Click" ></Button>
                        <Button Command="{Binding UndoCommand}"  Background="#89ffaa" Content="Undo" ></Button>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>
            <Grid Grid.Row="4">
                <materialDesign:Card ToolTip="Thông tin phiếu" Margin="15,10.6,14.8,15"  VerticalContentAlignment="Stretch" Height="220" >
                    <ScrollViewer VerticalScrollBarVisibility="Disabled" Height="auto">
                        <DataGrid x:Name="nHAPXUATKHODataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" RowDetailsVisibilityMode="VisibleWhenSelected" SelectionChanged="selected" >
                            <DataGrid.Columns >
                                <DataGridTextColumn x:Name="mAPJIEUColumn" Binding="{Binding PHIEU}" Header="PHIEU" Width="100" FontSize="12"/>
                                <DataGridTextColumn x:Name="mAVTColumn" Binding="{Binding MAVT}" Header="MAVT" Width="100" FontSize="12"/>
                                <DataGridTextColumn x:Name="sOLUONGColumn" Binding="{Binding SOLUONG}" Header="SỐ LƯỢNG" Width="150" FontSize="12"/>
                                <DataGridTextColumn x:Name="dONGIAColumn" Binding="{Binding DONGIA}" Header="ĐƠN GIÁ" Width="150" FontSize="12"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>
                </materialDesign:Card>
            </Grid>
        </Grid>
    </Grid>
</Window>
